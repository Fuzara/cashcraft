{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"],
      "@declarations/cashcraft": ["src/declarations/cashcraft_backend"],
      "@declarations/wallets": ["src/declarations/wallets_backend_backend"],
      "@declarations/wallets_frontend": ["src/declarations/wallets_backend_frontend"],
      "@declarations/cashcraft/*": ["src/declarations/cashcraft_backend/*"],
      "@declarations/wallets/*": ["src/declarations/wallets_backend_backend/*"],
      "@declarations/wallets_frontend/*": ["src/declarations/wallets_backend_frontend/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "backend/src"],
  "exclude": ["node_modules"]
}
